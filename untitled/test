function countBs(x){
    var counter = 0;
    var match = x.charAt(counter);
    var totalBs = 0;
    while (counter < x.length-1)
        if (match == 'B')
          totalBs++;
          counter++;
        if (match!= 'B')
          counter++;
    return match
    return totalBs;
}
console.log(countBs("Bbc"));